<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/back_16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/sides"
        android:paddingLeft="@dimen/sides"
        android:paddingRight="@dimen/sides"
        android:paddingStart="@dimen/sides"
        android:paddingTop="@dimen/layout_padding_internal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/buddies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/empty_list"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>