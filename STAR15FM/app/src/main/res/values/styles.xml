<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Material">
        <!-- Customize your theme here. -->
    </style>

    <style name="Material" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Settings" parent="Material" />

    <style name="AppTheme.Startup" parent="Material" />


    <style name="TIL" parent="android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TIL_Error" parent="android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="heads" parent="android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
